<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-header">
                    <h1>Add new place</h1>
                </div>
                <div class="card-body">
                    <form action="/add" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" name="name" placeholder="Insert name">
                        </div>
                        <div class="form group">
                            <textarea name="description" cols="30" rows="10" placeholder="Insert a description" class="form-control"></textarea>
                        </div>
                        <div class="form-group mt-2">
                            <input type="submit" class="btn btn-success btn-block" value="Add place">
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <h1 class="ml-auto">List of places</h1>
            <% for(var i = 0; i < places.length; i++) { %>
                <table class="table table-bordered table-hover mb-4">

                    <tr class="bg-primary">
                        <td class="text-white"><h4>NÂ° <%= i + 1 %></h4></td>
                        <td class="text-white"><%= places[i].name %></td>
                        <td><a href="/turn/<%= places[i]._id %>" class="btn btn-block <%= places[i].status ? 'btn-info':'btn-secondary' %>">Visited</a></td>
                        <td><a href="/edit/<%= places[i]._id %>" class="btn btn-warning btn-block">Edit</a></td>
                        <td><a href="/delete/<%= places[i]._id %>" class="btn btn-danger btn-block">Delete</a></td>
                    </tr>
                    <tr class="table-active">
                        <td colspan="5"><%= places[i].description %></td>
                    </tr>
                </table>
            <% } %>
        
        </div>
    </div>


</div>

<%- include('partials/footer') %>
